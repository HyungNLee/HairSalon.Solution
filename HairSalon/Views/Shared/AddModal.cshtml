

<!-- MODAL FOR ADDING CLIENTS -->
  <div class="modal-container">
    <!--Modal for 'Add Clients'-->
    <div class="modal fade" id="addClientModal" tabindex="-1" role="dialog" aria-labelledby="addClientLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="addClientLabel">Add Client</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form action="/home/stylists/client/add" method="post">
              <div class="form-group">
                <input type="text" id="stylistId" name="stylistId" value=@Model.GetId()>
                <label for="clientName">Client Name: </label>
                <input type="text" id="clientName" class="form-control" name="clientName">
              </div>
              <button type="submit" class="btn btn-info">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>